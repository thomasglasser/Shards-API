{
  "schemaVersion": 1,
  "id": "sherdsapi",
  "version": "${version}",

  "name": "Sherds API",
  "description": "Makes adding new pottery shards easier",
  "authors": [
    "Thomas Glasser"
  ],
  "contact": {
    "homepage": "https://github.com/thomasglasser/Sherds-API/wiki",
    "sources": "https://github.com/thomasglasser/Sherds-API"
  },

  "license": "All Rights Reserved",
  "icon": "api.png",
  "environment": "*",
    "entrypoints": {
      "main": [
        "dev.thomasglasser.sherdsapi.SherdsApiFabric"
      ]
    },
    "mixins": [
      "sherdsapi.mixins.json"
    ],

  "accessWidener" : "sherdsapi.accesswidener",

  "depends": {
      "fabricloader": ">=0.14",
      "fabric-api": "*",
      "minecraft": ">=1.20.1",
      "java": ">=17"
    },
  "custom": {
    "mc-publish": {
      "loaders": ["fabric", "quilt"]
    }
  }
}
  